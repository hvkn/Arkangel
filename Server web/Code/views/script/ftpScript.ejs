<script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
<script src="javascripts/owl.carousel.min.js"></script>
<script src="javascripts/dropzone.min.js"></script>
<script>
    $(document).ready(function() {
        if ("<%= messageSave.length %>" > 0) {
            Toastify({
                text: "<%= messageSave %>",
                duration: 10000,
                newWindow: true,
                close: true,
                gravity: "top", // `top` or `bottom`
                positionLeft: false, // `true` or `false`
                backgroundColor: "linear-gradient(to right, #00b09b, #96c93d)",
            }).showToast();
        }
        
        if (<%= data.enableFTP %> === true)
            $('#enableFTP').prop('checked', true);
        $('#hoursFTP').val("<%= data.hoursFTP %>");
        $('#minutesFTP').val("<%= data.minutesFTP %>");
        if (<%= data.enableUploadImage %> === true)
            $('#enableUploadImage').prop('checked', true);
        if (<%= data.enableUploadKeystroke %> === true)
            $('#enableUploadKeystroke').prop('checked', true);
        if (<%= data.enableUploadWebcam %> === true)
            $('#enableUploadWebcam').prop('checked', true);
        if (<%= data.enableUploadWebsite %> === true)
            $('#enableUploadWebsite').prop('checked', true);
        if (<%= data.enableLimit %> === true)
            $('#enableLimit').prop('checked', true);
        $('#limitFTP').val("<%= data.limitFTP %>");
        if (<%= data.enableClear %> === true)
            $('#enableClear').prop('checked', true);
        if (<%= data.enablePassive %> === true)
            $('#enablePassive').prop('checked', true);
        $('#hostnameFTP').val("<%= data.hostnameFTP %>");
        $('#userFTP').val("<%= data.userFTP %>");
        $('#passwordFTP').val("<%= data.passwordFTP %>");
        $('#remoteDirFTP').val("<%= data.remoteDirFTP %>")
        $('.navbar-menu a[href*="/ftp"]').addClass('active-item');
    })

</script>
<script src="javascripts/script.js"></script>