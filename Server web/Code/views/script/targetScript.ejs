<script>
    $(document).ready(function() {
        if ("<%= messageSave.length %>" > 0) {
            Toastify({
                text: "<%= messageSave %>",
                duration: 10000,
                newWindow: true,
                close: true,
                gravity: "top", // `top` or `bottom`
                positionLeft: false, // `true` or `false`
                backgroundColor: "linear-gradient(to right, #00b09b, #96c93d)",
            }).showToast();
        }

                if ("<%= messageAdd.length %>" > 0) {
            Toastify({
                text: "<%= messageAdd %>",
                duration: 10000,
                newWindow: true,
                close: true,
                gravity: "top", // `top` or `bottom`
                positionLeft: false, // `true` or `false`
                backgroundColor: "linear-gradient(to right, #00b09b, #96c93d)",
            }).showToast();
        }

        if ("<%= messageDel.length %>" > 0) {
            Toastify({
                text: "<%= messageDel %>",
                duration: 10000,
                newWindow: true,
                close: true,
                gravity: "top", // `top` or `bottom`
                positionLeft: false, // `true` or `false`
                backgroundColor: "linear-gradient(to right, #00b09b, #96c93d)",
            }).showToast();
        }
        
        if (<%= data.enableAll %> === true)
            $('#enableAll').prop('checked', true);
        if (<%= data.enableOnly %> === true)
            $('#enableOnly').prop('checked', true);
        $('.navbar-menu a[href*="/target"]').addClass('active-item');
    })

</script>
